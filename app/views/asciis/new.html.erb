<h1>Word Central</h1>

<h2>Asciify some text</h2>

<form action="/asciis" method="post">
  <div>
    <label for="ascii_user_text">Text</label>
    <textarea name="ascii[user_text]" id="ascii_user_text"></textarea>
  </div>

  <button type="submit">Asciify</button>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>
